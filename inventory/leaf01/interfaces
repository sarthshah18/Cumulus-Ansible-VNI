#########
## Configured by Ansible
#########

# Loopback interface
auto lo
iface lo inet loopback
  address 1.1.1.18/32
  clagd-vxlan-anycast-ip 19.1.1.1
  alias loopback interface

# Management interface
auto eth0
iface eth0 inet dhcp
    alias management interface
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto

# Port to Server
auto swp7
iface swp7
link-autoneg on
alias to Server
  # This is required for Vagrant only
  # This is required for Vagrant only

# IPL Port to Leaf02
auto swp15
iface swp15
alias to Leaf02
  # This is required for Vagrant only
  # post-up ip link set swp15 promisc on

auto swp16
iface swp16
alias to Leaf02
  # This is required for Vagrant only
  # post-up ip link set swp16 promisc on

# UPlinks to Spine01
auto swp5
iface swp5
alias to Spine01

auto swp6
iface swp6
alias to Spine02

# CLAG Peerlink bond
auto peerlink
iface peerlink
  bond-slaves swp15 swp16

# CLAG Peerlink L2 interface.
# This creates VLAN 4094 that only lives on the peerlink bond
# No other interface will be aware of VLAN 4094
auto peerlink.4094
iface peerlink.4094
  address 169.254.1.1/30
  clagd-peer-ip 169.254.1.2
  clagd-backup-ip 1.1.1.19
  clagd-sys-mac 44:39:39:ff:40:94
  clagd-priority 100

# Bond to Server
auto bond01
iface bond01
  bond-slaves swp7
  bridge-access 1009
  clag-id 1

# Define the bridge for STP
auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports bond01 peerlink vni-10009 
  bridge-vids 1009
  bridge-pvid 1

# VxLAN Tunnel for Server1-Server3 (Vlan 1009)
auto vni-10009
iface vni-10009
  vxlan-id 1009
  vxlan-local-tunnelip 1.1.1.18
  bridge-access 1009
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes

